<h4 style="float: left;">Team List</h4>
<h4 style="float: right;"><%= link_to 'New Team', new_team_path, class: "btn btn-primary" %></h4>
<table class="table table-striped">
  <thead>
    <tr class="info">
      <th>Team name</th>
      <th>Users</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |t| %>
      <tr>
        <td><%= t.name %></td>
        <td><% t.users.each do |user| %>
        <%= User.find_by_id(user).first_name %>
        <br>
        <% end %>
        </td>
        <%#= link_to 'Show', user %>
        <td><%= link_to 'Edit', edit_team_path(t) %></td>
        <td><%= link_to 'Destroy', t, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



